<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="company.unknown.eventually.CurrentEventActivity"
    tools:showIn="@layout/activity_current_event">

    <Button
        android:id="@+id/check_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Map"
        android:onClick="gotoMap"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/locationView"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/eventNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Insert Event Name)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/timeView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Insert time and amount of time left)"
        tools:layout_editor_absoluteY="136dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/eventNameView"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/locationView"
        />

    <TextView
        android:id="@+id/locationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Insert Location Here)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/timeView"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/check_map_button"
        app:layout_constraintVertical_bias="0.488"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
